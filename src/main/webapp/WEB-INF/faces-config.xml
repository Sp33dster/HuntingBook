<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <application>
        <locale-config>
            <default-locale>pl</default-locale>
            <supported-locale>pl</supported-locale>
            <supported-locale>en</supported-locale>
        </locale-config>
        <resource-bundle>
            <base-name>i18n.messages</base-name>
            <var>msg</var>
        </resource-bundle>
        <resource-bundle>
            <base-name>/Bundle</base-name>
            <var>bundle</var>
        </resource-bundle>
        <message-bundle>
            i18n.jsf_messages
        </message-bundle>
    </application>
    
    <navigation-rule>
        <from-view-id>*</from-view-id>
        
        <navigation-case>
            <from-outcome>cancelAction</from-outcome>
            <to-view-id>/main/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>accountDetails</from-outcome>
            <to-view-id>/account/accountDetails.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    
        <navigation-case>
            <from-outcome>accountsList</from-outcome>
            <to-view-id>/account/accountsList.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>createHunter</from-outcome>
            <to-view-id>/account/createHunter.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>createAdmin</from-outcome>
            <to-view-id>/account/createAdmin.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>createMOTHunter</from-outcome>
            <to-view-id>/account/createMOTHunter.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>login</from-outcome>
            <to-view-id>/login/loginForm.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>loginError</from-outcome>
            <to-view-id>/login/loginFormError.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>changePassword</from-outcome>
            <to-view-id>/account/changePassword.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>changeMyPassword</from-outcome>
            <to-view-id>/account/changeMyPassword.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>editAccount</from-outcome>
            <to-view-id>/account/editAccount.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/success.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    
        <navigation-case>
            <from-outcome>deleteSuccess</from-outcome>
            <to-view-id>/deleteSuccess.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>addHunt</from-outcome>
            <to-view-id>/hunt/addHunt.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>addResult</from-outcome>
            <to-view-id>/result/addResult.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>huntsList</from-outcome>
            <to-view-id>/hunt/huntsList.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>successHunt</from-outcome>
            <to-view-id>/hunt/huntsList.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    
        <navigation-case>
            <from-outcome>main</from-outcome>
            <to-view-id>/main/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
</faces-config>
